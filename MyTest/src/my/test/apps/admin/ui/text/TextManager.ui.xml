<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:my="urn:import:my.test.apps.admin.ui.text.toolbar">
	<ui:style>
		.RichText {
			border: 1px solid #BBBBBB;
			border-spacing: 0px;
			margin: auto;
			padding-top: 5px;
		}
		
		.RichText div {
 			text-align: center; 
		}

	</ui:style>
	<g:HTMLPanel width="50%" ui:field='panel' addStyleNames='{style.RichText}'>

		<table width="100%" >
			<tr>
				<td>
					<my:RichTextToolbar ui:field="bar" width="100%" />
				</td>
			</tr>
			<tr>
				<td>
					<hr />
					<g:RichTextArea ui:field='area' width="100%" height="25em"></g:RichTextArea>
				</td>
			</tr>
			<tr>
				<td>
					<hr />
					<g:Button ui:field="add" > przeslij text </g:Button>
				</td>
			</tr>
			<tr><td>
				<g:HTML ui:field="label"></g:HTML>
			</td></tr>
		</table>


	</g:HTMLPanel>
</ui:UiBinder> 