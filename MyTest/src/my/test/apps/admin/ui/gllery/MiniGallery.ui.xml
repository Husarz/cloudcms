<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="my.test.apps.admin.ui.gllery.MiniGallery.MyStyle">
		.sps {
			position: absolute;
			top: 0px;
			left: 0px;
			bottom: 0px;
			right: 0px;
			background-color:black;
			opacity: 0.5;
		}
		.panel {
			position: absolute;
			top: 20px;
			left: 20px;
			bottom: 20px;
			right: 20px
			box-shadow:     #1C1C1C 12px 12px 8px;
		}
		.panel img{
			

		}
	</ui:style>
	<g:HTMLPanel width="100%" height="100%">
		<div class="{style.sps}" />
		<g:FocusPanel ui:field="sp" height="100%" width="100%">
			<g:HTMLPanel ui:field="panel"  addStyleNames='{style.panel}' />
		</g:FocusPanel>
		
<!-- 		<g:Grid ui:field="grid" /> -->
	</g:HTMLPanel>
</ui:UiBinder> 